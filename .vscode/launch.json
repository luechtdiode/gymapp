{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Launch Client",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200/#",
      "port": 9223,
      "sourceMaps": true,
      "diagnosticLogging": true,
      "webRoot": "${workspaceRoot}",
      "runtimeArgs": [
        "--disable-session-crashed-bubble",
        "--disable-infobars"
      ],
      "userDataDir": "${workspaceRoot}/.vscode/chrome"
    },
    {
      "name": "Launch index.html",
      "type": "edge",
      "request": "launch",
      "file": "${workspaceRoot}/index.html"
    },
    {
      "name": "Launch localhost with sourcemaps",
      "type": "edge",
      "request": "launch",
      "url": "http://localhost:4200/#",
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}"
    },
    {
      "name": "Attach",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "dist",
      "sourceMaps": true
    }
  ]
}
